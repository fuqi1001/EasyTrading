<div class="container">
	<div class="row ">
		<div class="col-sm-12 text-col text-center">
			<div class="col-lg-12">
				<h1>Please login before shopping</h1>
				<form id="login-form" role="form" style="display: block;">
					<div class="form-group">
						<input id="user-name" type="text" tabindex="1" class="form-control" placeholder="Username" value="">
					</div>

					<div class="form-group">
						<input id="user-password" type="password" tabindex="2" class="form-control" placeholder="Password" value="">
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-lg-12 ">
								<input type="submit" tabindex="4" class="form-control btn btn-login" value="Log In">
							</div>
						</div>
					</div>
				</form>
				<div class="form-group">
					<div class="row">
						<div class="col-sm-12 ">
							<button id="create-user" class="form-control btn btn-login">Create New User</button>
						</div>
					</div>
				</div>
				<div class="alert alert-danger hidden col-lg-12 " id="form-alert"></div>
			</div>
		</div>
	</div>
</div>